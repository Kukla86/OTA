generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  createdAt DateTime   @default(now())
  orders    Order[]
  favorites Favorite[]
}

model Order {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  offerId     String
  provider    String
  airline     String
  price       Int
  cabinClass  String
  fromAirport String
  toAirport   String
  departureAt DateTime
  arrivalAt   DateTime
  stripePiId  String
  status      String   @default("created")
  createdAt   DateTime @default(now())
}

model Favorite {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  offerId     String
  provider    String
  airline     String
  price       Int
  cabinClass  String
  fromAirport String
  toAirport   String
  departureAt DateTime
  arrivalAt   DateTime
  createdAt   DateTime @default(now())
}
